<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu4">


    <RelativeLayout
        android:layout_marginTop="@dimen/preguntasMarenSuperior"
        android:layout_width="290dp"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageViewImagenPregunta"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:id="@+id/lblPregunta"
            android:text="Pregunta"
            android:textSize="@dimen/tamLabelsSubtitulo"/>
     </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pronunciar"
        android:id="@+id/btnPronunciarRespuesta" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnContinuarPregunta"
        android:layout_marginTop="@dimen/margenSupButon"
        android:text="Otra pregunta"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:text=""
            android:background="@android:color/transparent"
            android:id="@+id/btnAtrasPreguntas"/>

    </LinearLayout>


</LinearLayout>